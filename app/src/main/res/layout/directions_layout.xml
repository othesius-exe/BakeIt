<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/directions_list"
    style="@style/card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_top_bottom_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/card_top_bottom_padding">

        <TextView
            android:id="@+id/description_short"
            style="@style/text_view_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step"/>

        <TextView
            android:id="@+id/direction_long"
            style="@style/directions_view_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/direction"
            android:layout_below="@+id/description_short"/>

        <ImageView
            android:id="@+id/watch_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/play_button_height"
            android:layout_gravity="left"
            android:src="@drawable/ic_play_arrow_black_24px"
            android:layout_above="@+id/divider"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/colorAccent"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
